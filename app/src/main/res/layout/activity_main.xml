<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/colorWhite"
    tools:context=".Pages.MainActivity">


    <FrameLayout
        android:id="@+id/forMainFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="60.5dp"/>


    <RelativeLayout
        android:id="@+id/roomFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:padding="15dp"
        android:visibility="gone"
        android:elevation="1dp"
        android:background="@drawable/room_down"
        android:layout_above="@+id/bottomNavigation"
        >
        <ImageView
            android:id="@+id/imaage"
            android:layout_width="20dp"
            android:layout_centerVertical="true"
            android:background="@drawable/audioroom"
            android:layout_marginLeft="10dp"
            android:layout_height="20dp"/>
        <TextView
            android:id="@+id/roomName"
            android:layout_width="150dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:textSize="15sp"
            android:text="Room Name"
            android:textColor="@color/colorBlack"
            android:layout_alignLeft="@+id/imaage"
            android:layout_alignStart="@+id/imaage"
            android:layout_height="20dp"
            android:gravity="center_vertical"/>
        <ImageButton
            android:id="@+id/cancelroom"
            android:layout_width="23dp"
            android:onClick="cancelRoom"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_cross"
            android:backgroundTint="@color/colorBlack"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_height="23dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/colorGrey"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginBottom="0.3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite"
        android:id="@+id/bottomNavigation"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/mainDashboardlaou"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/mainDashboard"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_main_menu"
                android:backgroundTint="@color/colorMain" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/searchlaou"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/search"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:backgroundTint="@color/colorBlack"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_search"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/notificationlaou"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/notification"
                android:layout_width="19.6dp"
                android:layout_height="23dp"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/colorBlack"
                android:background="@drawable/ic_notification" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/profilelaou"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/profile"
                android:layout_width="20dp"
                android:layout_height="23dp"
                android:backgroundTint="@color/colorBlack"
                android:layout_centerInParent="true"
                android:background="@drawable/ic_profile"/>
        </RelativeLayout>
    </LinearLayout>


</RelativeLayout>