<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorWhite"
    android:layout_height="match_parent"
    tools:context=".Authentication.ForgotPassward">
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:onClick="backPressed"
        android:layout_marginTop="23dp"
        android:backgroundTint="@color/colorBlack"
        android:background="@drawable/ic_baseline_arrow_back_24"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:id="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorBlack"
        android:text="Reset Password"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="60dp"
        android:id="@+id/simpleImage"
        android:layout_centerHorizontal="true"
        android:background="@drawable/emailverify"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/instructions"
        android:layout_below="@+id/simpleImage"
        android:textColor="@color/colorBlack"
        android:gravity="center"
        android:textSize="13sp"
        android:text="Enter your email Adress\n A link will be sent to your email adress"/>
    <LinearLayout
        android:id="@+id/setEmail"
        android:layout_below="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="30dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:padding="2dp"
            android:backgroundTint="@color/colorGrey"
            android:layout_gravity="center_vertical"
            android:background="@drawable/ic_outline_email_24"/>
        <EditText
            android:id="@+id/signUpEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="5dp"
            android:textCursorDrawable="@null"
            android:textSize="15sp"
            android:textColorHint="@color/colorGrey"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:hint="Email address"/>

    </LinearLayout>
    <TextView
        android:id="@+id/sucPasswordError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF0000"
        android:textSize="11sp"
        android:layout_below="@+id/setEmail"
        android:visibility="invisible"
        android:layout_marginLeft="30dp"
        android:text="Email is not registered"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Verify"
        android:layout_below="@+id/setEmail"
        android:layout_margin="40dp"
        android:textColor="@color/colorWhite"
        android:textSize="15sp"
        android:onClick="verify"
        android:background="@drawable/button"/>

</RelativeLayout>